<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_go_road_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="上班路况提醒"
        />

    <Button
        android:id="@+id/btn_back_road_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="下班路况提醒"/>

    <Button
        android:id="@+id/btn_rainy_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="下雨/雪/冰雹天气提醒"/>

    <Button
        android:id="@+id/btn_pollution_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:text="污染天气提醒"/>

    <Button
        android:id="@+id/btn_pollution_weather2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:text="HUI污染推送"/>
</LinearLayout>

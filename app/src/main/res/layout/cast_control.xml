<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_ll"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="-220dp"
    android:background="@color/blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:orientation="horizontal">

        <Button
            android:id="@+id/control_private_mode"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:background="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/control_setting"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_toLeftOf="@+id/control_close_screen"
            android:background="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/control_close_screen"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_toLeftOf="@+id/control_exit"
            android:background="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/control_exit"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/control_music_fm_ll"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/music_icon"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diamonds" />

        <TextView
            android:id="@+id/music_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_weight="1"
            android:text="Rich" />

        <Button
            android:id="@+id/music_play_btn"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:background="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/music_more"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@mipmap/ic_launcher" />
    </LinearLayout>
</LinearLayout>
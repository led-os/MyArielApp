<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wechat_income_msg_show_rela"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="13dp"
    android:background="@mipmap/wechat_msg_bg">

    <LinearLayout
        android:id="@+id/wechat_income_msg_title_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@mipmap/wechat_default_contacts_icon" />

        <TextView
            android:id="@+id/income_msg_contact_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text="Tori Kelly"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/slv_income_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wechat_income_msg_title_ly"
        android:layout_above="@id/reply_msg_remind_txt"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/income_msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:lineSpacingExtra="20dp"
            android:text="几点下班？晚上要不要一起吃饭？"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </ScrollView>

    <EditText
        android:id="@+id/reply_msg_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wechat_income_msg_title_ly"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="54dp"
        android:lineSpacingExtra="20dp"
        android:maxLines="2"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:visibility="gone" />

    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true"-->

    <TextView
        android:id="@+id/reply_msg_remind_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="25dp"
        android:text="@string/wechat_income_remind_str"
        android:textColor="#80ffffff"
        android:textSize="16sp" />
</RelativeLayout>

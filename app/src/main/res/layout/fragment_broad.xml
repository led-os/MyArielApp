<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/relat_top"
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:background="@drawable/broad_shape"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/delete_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="17dp"
                android:src="@mipmap/delete_icon"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@mipmap/radio"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/left_image"
                android:layout_width="18dp"
                android:layout_height="32dp"
                android:layout_marginRight="70dp"
                android:layout_gravity="center"
                android:background="@mipmap/left"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fm_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="FM  89.9"
                    android:textColor="@color/text_while"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/music_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="音乐之声"
                    android:textColor="@color/text_while"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/right_image"
                android:layout_width="18dp"
                android:layout_height="32dp"
                android:layout_marginLeft="70dp"
                android:layout_gravity="center"
                android:background="@mipmap/right"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/update_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_shuaxin"
                />

            <ImageView
                android:id="@+id/see_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_liulan"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sound_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_sound"
                    />

                <ImageView
                    android:id="@+id/list_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_list"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


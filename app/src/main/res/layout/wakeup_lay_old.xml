<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/back_btn"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:layout_marginLeft="@dimen/dp8"
            >
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_back"
                android:textSize="@dimen/dp24" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/dp30"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音唤醒词"
            android:textColor="@color/black"
            android:textSize="18.67sp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33.33dp"
        android:layout_marginTop="54dp"
        android:text="请选择喜欢的唤醒词语"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.qinggan.app.arielapp.ui.widget.MyRadioGroup
        android:orientation="vertical"
        android:id="@+id/wakeup_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:paddingLeft="@dimen/dp33"
            android:id="@+id/hi_lingji_lay"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/hi_lingji_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="你好，羚机"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/hi_lingji"
                android:layout_marginTop="28dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@drawable/address_radio_select"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="33.33dp"
                android:background="@color/mine_lines_color" />
        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="@dimen/dp33"
            android:id="@+id/hi_smallling_lay"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/hi_smallling_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="你好，小菱"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioButton
                android:layout_marginTop="28dp"
                android:id="@+id/hi_smallling"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@drawable/address_radio_select"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="33.33dp"
                android:background="@color/mine_lines_color" />
        </RelativeLayout>



        <RelativeLayout
            android:paddingLeft="@dimen/dp33"
            android:id="@+id/hi_babyjun_lay"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/hi_babyjun_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="你好，宝骏"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioButton
                android:button="@drawable/address_radio_select"
                android:layout_marginTop="28dp"
                android:id="@+id/hi_babyjun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp" />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="33.33dp"
                android:background="@color/mine_lines_color" />
        </RelativeLayout>



    </com.qinggan.app.arielapp.ui.widget.MyRadioGroup>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
    </data>

    <LinearLayout
        android:id="@+id/head_container"
        android:layout_width="@dimen/dp360"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/person"
            android:layout_width="@dimen/dp64"
            android:layout_height="@dimen/dp64"
            android:layout_marginTop="@dimen/dp88"
            android:src="@mipmap/icon_head" />

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp25"
            android:gravity="center_vertical"
            android:text="登录/注册"
            android:textColor="#000000"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp18"
            android:gravity="center_vertical"
            android:text="Sara Nash"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp11"
            android:gravity="center_vertical"
            android:text="五菱宏光S"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/dp13"
             android:layout_marginRight="@dimen/dp13"
             android:background="@drawable/tab_bg"
             android:layout_marginTop="@dimen/dp47"
             android:orientation="vertical">
             <LinearLayout
                 android:id="@+id/_mycar"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp53"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <ImageView
                     android:layout_width="@dimen/dp30"
                     android:layout_height="@dimen/dp30"
                     android:layout_marginLeft="@dimen/dp14"
                     android:background="@mipmap/home_icon_findcar"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#FFFFFFFF"
                     android:text="我的车辆"
                     android:textSize="@dimen/sp16"
                     android:layout_marginLeft="@dimen/dp5"/>
                 <LinearLayout
                     android:layout_width="@dimen/dp0"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_weight="1">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="#FFFFFFFF"
                         android:text="五菱宏光s"
                         android:layout_gravity="center_vertical"
                         android:textSize="@dimen/sp14"
                         android:layout_marginLeft="@dimen/dp5"/>
                     <ImageView
                         android:layout_width="@dimen/dp30"
                         android:layout_height="@dimen/dp30"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/home_icon_more"/>
                 </LinearLayout>


             </LinearLayout>

             <LinearLayout
                 android:id="@+id/voice_wakeup_lay"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp53"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <ImageView
                     android:layout_width="@dimen/dp30"
                     android:layout_height="@dimen/dp30"
                     android:layout_marginLeft="@dimen/dp14"
                     android:background="@mipmap/home_icon_voice"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#FFFFFFFF"
                     android:text="语音唤醒词"
                     android:textSize="@dimen/sp16"
                     android:layout_marginLeft="@dimen/dp5"/>
                 <LinearLayout
                     android:layout_width="@dimen/dp0"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_weight="1">
                     <TextView
                         android:id="@+id/wakeup_text"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="#FFFFFFFF"
                         android:text="你好，小菱"
                         android:layout_gravity="center_vertical"
                         android:textSize="@dimen/sp14"
                         android:layout_marginLeft="@dimen/dp5"/>
                     <ImageView
                         android:layout_width="@dimen/dp30"
                         android:layout_height="@dimen/dp30"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/home_icon_more"/>
                 </LinearLayout>


             </LinearLayout>


             <LinearLayout
                 android:id="@+id/offLineMap"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp53"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <ImageView
                     android:layout_width="@dimen/dp30"
                     android:layout_height="@dimen/dp30"
                     android:layout_marginLeft="@dimen/dp14"
                     android:background="@mipmap/home_icon_adress"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#FFFFFFFF"
                     android:text="常用地址"
                     android:textSize="@dimen/sp16"
                     android:layout_marginLeft="@dimen/dp5"/>
                 <LinearLayout
                     android:layout_width="@dimen/dp0"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_weight="1">

                     <ImageView
                         android:layout_width="@dimen/dp30"
                         android:layout_height="@dimen/dp30"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/home_icon_more"/>
                 </LinearLayout>


             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp53"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <ImageView
                     android:layout_width="@dimen/dp30"
                     android:layout_height="@dimen/dp30"
                     android:layout_marginLeft="@dimen/dp14"
                     android:background="@mipmap/home_icon_about"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#FFFFFFFF"
                     android:text="版本"
                     android:textSize="@dimen/sp16"
                     android:layout_marginLeft="@dimen/dp5"/>
                 <LinearLayout
                     android:layout_width="@dimen/dp0"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_weight="1">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="#4FB3FB"
                         android:text="有新版本1.6.3"
                         android:layout_gravity="center_vertical"
                         android:textSize="@dimen/sp14"
                         android:layout_marginLeft="@dimen/dp5"/>
                     <ImageView
                         android:layout_width="@dimen/dp30"
                         android:layout_height="@dimen/dp30"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/home_icon_more"/>
                 </LinearLayout>


             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp53"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <ImageView
                     android:layout_width="@dimen/dp30"
                     android:layout_height="@dimen/dp30"
                     android:layout_marginLeft="@dimen/dp14"
                     android:background="@mipmap/home_icon_help"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#FFFFFFFF"
                     android:text="帮助"
                     android:textSize="@dimen/sp16"
                     android:layout_marginLeft="@dimen/dp5"/>
                 <LinearLayout
                     android:layout_width="@dimen/dp0"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_weight="1">

                     <ImageView
                         android:layout_width="@dimen/dp30"
                         android:layout_height="@dimen/dp30"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/home_icon_more"/>
                 </LinearLayout>


             </LinearLayout>
             <LinearLayout
                 android:id="@+id/test_btn"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp53"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <ImageView
                     android:layout_width="@dimen/dp30"
                     android:layout_height="@dimen/dp30"
                     android:layout_marginLeft="@dimen/dp14"
                     android:background="@mipmap/home_icon_findcar"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#FFFFFFFF"
                     android:text="测试界面"
                     android:textSize="@dimen/sp16"
                     android:layout_marginLeft="@dimen/dp5"/>
                 <LinearLayout
                     android:layout_width="@dimen/dp0"
                     android:layout_height="match_parent"
                     android:gravity="right"
                     android:layout_weight="1">
                     <ImageView
                         android:layout_width="@dimen/dp30"
                         android:layout_height="@dimen/dp30"
                         android:layout_gravity="center_vertical"
                         android:background="@drawable/home_icon_more"/>
                 </LinearLayout>


             </LinearLayout>
         </LinearLayout>


        <LinearLayout
            android:id="@+id/login_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp53"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/outlogin_btn_bg"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:alpha="0.8"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="#FFFFFF"
                android:text="退出登录"/>
        </LinearLayout>
    </LinearLayout>
</layout>
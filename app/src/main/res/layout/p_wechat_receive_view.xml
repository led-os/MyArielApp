<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wechat_inside_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wechat_voice_title_rela"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="28dp">

        <ImageButton
            android:id="@+id/wechat_voice_btn"
            android:layout_width="83dp"
            android:layout_height="54dp"
            android:layout_marginLeft="9px"
            android:background="@drawable/wechat_voice_switch_bg" />

        <TextView
            android:id="@+id/wechat_voice_switch_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/wechat_voice_btn"
            android:gravity="center_vertical"
            android:text="@string/wechat_voice_switch_off_str"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:background="@mipmap/wechat_notices_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wechat_reply_title_rela"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="28dp">

        <ImageButton
            android:id="@+id/wechat_reply_img"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="9px"
            android:background="@mipmap/wechat_title_reply" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/wechat_reply_img"
            android:gravity="center_vertical"
            android:text="@string/wechat_reply_str"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wechat_msg_list_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="13dp">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@mipmap/wechat_voice_input_btn" />

        <TextView
            android:id="@+id/wechat_speech_remind_txt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/wechat_income_remind_str"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp">

        <Button
            android:id="@+id/wechat_reply_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="34dp"
            android:background="@drawable/wechat_reply_select" />

        <Button
            android:id="@+id/wechat_cancel_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34dp"
            android:background="@drawable/wechat_cancel_recall_select" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wechat_drop_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</LinearLayout>

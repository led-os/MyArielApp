<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="远程车控(使用前请先登录,点击1号车设置pdsn)"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/switch_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/one_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1号车"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/two_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2号车"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/three_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3号车"
                android:textColor="@color/black" />
        </RadioGroup>

        <Button
            android:id="@+id/query_tbox_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="查询Tbox状态" />

        <Button
            android:id="@+id/wakeup_tbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="唤醒tbox" />


        <Button
            android:id="@+id/set_pdsn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="设置PDSN" />

        <EditText
            android:id="@+id/pdsn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="登录" />
        <Button
            android:id="@+id/login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="切换账号" />

        <Button
            android:id="@+id/open_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="解锁车辆" />

        <Button
            android:id="@+id/start_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="启动发动机" />

        <Button
            android:id="@+id/open_air"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="打开空调温度24度" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="蓝牙车控"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/open_window_by_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="打开主驾车窗" />

        <Button
            android:id="@+id/open_sunroof_by_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="打开天窗" />
        <Button
            android:id="@+id/temp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="温度低一点" />
        <Button
            android:id="@+id/temp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="温度低两点" />
        <Button
            android:id="@+id/open_air_by_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="打开空调" />
        <Button
            android:id="@+id/open_set_by_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="记忆座椅1" />
        <Button
            android:id="@+id/open_set_by_blue2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="记忆座椅2" />

        <Button
            android:visibility="gone"
            android:id="@+id/add_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="增加记忆座椅设置" />
        <Button
            android:visibility="gone"

            android:id="@+id/get_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="获取记忆座椅设置" />
        <Button
            android:id="@+id/update_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="执行座椅记忆" />
        <Button
            android:visibility="gone"
            android:id="@+id/del_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="删除记忆座椅设置" />

        <Button
            android:id="@+id/open_init"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="初始化canbus" />
        <Button
            android:id="@+id/get_aircondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="获取空调数据" />
        <TextView
            android:id="@+id/get_aircondition_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
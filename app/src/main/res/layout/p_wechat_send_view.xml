<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wechat_inside_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wechat_reply_title_rela"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="28dp">

        <ImageButton
            android:id="@+id/wechat_send_img"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="22dp"
            android:background="@mipmap/wechat_default_send_icon" />

        <TextView
            android:id="@+id/wechat_send_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/wechat_send_img"
            android:gravity="center_vertical"
            android:text="@string/wechat_send_title_str"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wechat_income_msg_show_rela"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/wechat_message_bg">

        <TextView
            android:id="@+id/send_msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wechat_income_msg_title_ly"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="54dp"
            android:lineSpacingExtra="20dp"
            android:text="请说回复内容"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/send_msg_remind_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:gravity="center_horizontal"
            android:text="@string/wechat_send_input_msg_remind_str"
            android:textColor="#80ffffff"
            android:textSize="16sp" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@mipmap/wechat_voice_input_btn" />

        <TextView
            android:id="@+id/wechat_speech_remind_txt"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/wechat_send_speech_remind_listening_str"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp">

        <Button
            android:id="@+id/wechat_reply_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="34dp"
            android:background="@drawable/wechat_send_select" />

        <Button
            android:id="@+id/wechat_cancel_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34dp"
            android:background="@drawable/wechat_cancel_recall_select" />

        <Button
            android:id="@+id/wechat_only_cancel_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="34dp"
            android:background="@drawable/wechat_cancel_recall_select" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wechat_drop_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</LinearLayout>

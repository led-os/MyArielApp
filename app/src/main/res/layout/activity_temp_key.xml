<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="listener"
            type="com.qinggan.app.arielapp.ui.bluekey.TemporaryKeyActivity" />
    </data>

    <ScrollView
        android:id="@+id/temp_key_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp55"
                android:src="@drawable/icon_key1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp14"
                android:text="恭喜获得"
                android:textColor="#000000"
                android:textSize="18.67sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp3"
                android:text="临时手机钥匙"
                android:textColor="#0399EF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp23"
                android:text="24小时内您可以"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp15"
                android:text="@string/tmp_key"
                android:textColor="#9D9D9D"
                android:textSize="14sp" />

            <Button
                android:id="@+id/regist"
                android:layout_width="286dp"
                android:layout_height="@dimen/dp48"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:background="@drawable/key_btn_light"
                android:onClick="@{listener::onClick}"
                android:text="快速注册获取永久钥匙"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp13"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp15"
                android:text="@string/tmp_key2"
                android:textColor="#9D9D9D"
                android:textSize="12sp" />

            <Button
                android:id="@+id/later"
                android:layout_width="286dp"
                android:layout_height="@dimen/dp48"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp36"
                android:background="@drawable/key_btn_gray"
                android:onClick="@{listener::onClick}"
                android:text="以后再说"
                android:textColor="#343434"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>
</layout>